{
  "quick_actions": {
    "name": "quick_actions",
    "display_name": "Quick Actions",
    "schema": {
      "title": {
        "type": "text",
        "required": true,
        "description": "Section title for the quick actions",
        "default_value": "Snel naar"
      },
      "variant": {
        "type": "option",
        "description": "Grid layout variant",
        "default_value": "auto",
        "options": [
          {
            "name": "Auto Detection (≤3: horizontal, >3: grid)",
            "value": "auto"
          },
          {
            "name": "Horizontal (flex-wrap for ≤3 items)",
            "value": "horizontal"
          },
          {
            "name": "Grid (3×2 CSS grid for >3 items)",
            "value": "grid"
          }
        ]
      },
      "layout": {
        "type": "option",
        "description": "Individual card layout style",
        "default_value": "horizontal",
        "options": [
          {
            "name": "Horizontal (icon beside text)",
            "value": "horizontal"
          },
          {
            "name": "Vertical (icon above text)",
            "value": "vertical"
          }
        ]
      },
      "quick_action_items": {
        "type": "bloks",
        "restrict_components": true,
        "component_whitelist": ["quick_action_item"],
        "required": true,
        "minimum": 1,
        "maximum": 6,
        "description": "Quick action items (1-6 items recommended)"
      },
      "cta_section": {
        "type": "bloks",
        "restrict_components": true,
        "component_whitelist": ["cta_button"],
        "maximum": 1,
        "description": "Optional call-to-action button"
      }
    },
    "image": null,
    "preview_field": "title",
    "is_root": false,
    "preview_tmpl": "Quick Actions: {{ title }}",
    "is_nestable": true,
    "all_presets": [],
    "preset_id": null,
    "real_name": "quick_actions",
    "component_group_uuid": null
  },
  "quick_action_item": {
    "name": "quick_action_item",
    "display_name": "Quick Action Item",
    "schema": {
      "title": {
        "type": "text",
        "required": true,
        "description": "Action title",
        "default_value": "Action Title"
      },
      "description": {
        "type": "textarea",
        "required": true,
        "description": "Action description (keep concise)",
        "default_value": "Beschrijving van de actie",
        "max_length": 150
      },
      "link": {
        "type": "link",
        "required": true,
        "description": "Link destination for this action"
      },
      "icon": {
        "type": "asset",
        "description": "Optional icon (SVG recommended)",
        "filetypes": ["images"],
        "asset_folder_id": null
      }
    },
    "image": null,
    "preview_field": "title",
    "is_root": false,
    "preview_tmpl": "{{ title }}: {{ description }}",
    "is_nestable": false,
    "all_presets": [],
    "preset_id": null,
    "real_name": "quick_action_item",
    "component_group_uuid": null
  },
  "cta_button": {
    "name": "cta_button",
    "display_name": "Call-to-Action Button",
    "schema": {
      "text": {
        "type": "text",
        "required": true,
        "description": "Button text",
        "default_value": "Bekijk meer"
      },
      "link": {
        "type": "link",
        "required": true,
        "description": "Button destination URL"
      }
    },
    "image": null,
    "preview_field": "text",
    "is_root": false,
    "preview_tmpl": "CTA: {{ text }}",
    "is_nestable": false,
    "all_presets": [],
    "preset_id": null,
    "real_name": "cta_button",
    "component_group_uuid": null
  }
}
